@model IEnumerable<GestionJuridico.Models.Persona>
@{
    ViewData["Title"] = "Personas";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="col-3">
                    <a asp-action="Create" class="btn btn-primary btn-block"><i class="fa fa-plus-circle"></i> Nueva persona</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card card-gray-dark">
            <div class="card-header">
                <h3 class="card-title">Lista</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="defaultTable" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Dui)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Dui)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <button type="button" value="@item.Id" data-item="@item.Dui" class="btn btn-danger btn-delete" title="Eliminar">
                                    <i class="fa fa-trash"></i>
                                </button>
                                <form asp-action="Delete"></form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

@section Scripts
{
    <script>
        // Variable para seleccionar columnas para buscar
        var customColumSearch = [0,1]
    </script>
    <partial name="_IndexJSPartial"/>
}