@using GestionJuridico.Views.Shared.Components.Sidebar
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SGJ | @ViewData["Title"]</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.11.5/b-2.2.2/b-colvis-2.2.2/b-html5-2.2.2/date-1.1.2/r-2.2.9/sp-2.0.0/sl-1.3.4/datatables.min.css"/>
    <!-- Select2 -->
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="fas fa-bars"></i>
                </a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link">Inicio</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        @*<partial name="_RightNavBar"/>*@

    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    @(await Component.InvokeAsync<SidebarViewComponent>())

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">@ViewData["Title"]</h1>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <div class="content">
            <div class="container-fluid">
                @RenderBody()
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
            <h5>Title</h5>
            <p>Sidebar content</p>
        </div>
    </aside>
    <!-- /.control-sidebar -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
            @{ var version = _configuration.GetValue<string>("Version"); }
            <b>Version</b> @version
        </div>
        <!-- Default to the left -->
        <strong>
            Copyright &copy;
            <script>new Date().getFullYear() > document.write(new Date().getFullYear());</script> <a href="http://www.siget.gob.sv">Superintendencia General de Electricidad y Telecomunicaciones</a>.
        </strong>
    </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

<!-- jQuery -->
<script src="~/lib/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- Select2 -->
<script src="~/lib/select2/js/select2.full.min.js"></script>
<!-- AdminLTE App -->
<script src="~/lib/admin-lte/js/adminlte.min.js"></script>
<!-- DataTables  & Plugins -->
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.11.5/b-2.2.2/b-colvis-2.2.2/b-html5-2.2.2/date-1.1.2/r-2.2.9/sp-2.0.0/sl-1.3.4/datatables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
<script src="https://cdn.datatables.net/plug-ins/1.11.5/sorting/datetime-moment.js"></script>

<partial name="_MessagesAlertsPartial" />

<!-- Page specific script -->
@await RenderSectionAsync("Scripts", required: false)

<script>
    // Función principal
    $(function() {
        ("[data-widget="sidebar-search"]").SiteSearch(options);
    });
</script>
</body>
</html>