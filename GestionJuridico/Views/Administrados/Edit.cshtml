@model Administrado
@{
    ViewData["Title"] = "Editar Administrado";
    ViewData["CardTitle"] = "Administrado";
}

<div class="row">
    <div class="col-10 offset-1">
        <div class="card card-gray-dark">
            <div class="card-header">
                <h3 class="card-title">@ViewData["CardTitle"]</h3>
            </div>
            <form asp-action="Edit">
                <!-- /.card-header -->
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden"/>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control"/>
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TipoEntidadId" class="control-label"></label>
                                <select asp-for="TipoEntidadId" class="form-control select2" style="width: 100%" asp-items="ViewBag.TiposEntidad"></select>
                                <span asp-validation-for="TipoEntidadId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NumeroDocumento" class="control-label"></label>
                                <input asp-for="NumeroDocumento" class="form-control"/>
                                <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TipoDocumentoId" class="control-label"></label>
                                <select asp-for="TipoDocumentoId" class="form-control select2" style="width: 100%" asp-items="ViewBag.TiposDocumento"></select>
                                <span asp-validation-for="TipoDocumentoId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control"/>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <textarea asp-for="Direccion" class="form-control"></textarea>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="NombrePersonaRepresentante" class="control-label"></label>
                        <input asp-for="NombrePersonaRepresentante" class="form-control"/>
                        <span asp-validation-for="NombrePersonaRepresentante" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TelefonoPersonaRepresentante" class="control-label"></label>
                        <input asp-for="TelefonoPersonaRepresentante" class="form-control"/>
                        <span asp-validation-for="TelefonoPersonaRepresentante" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CargoPersonaRepresentanteId" class="control-label"></label>
                        <select asp-for="CargoPersonaRepresentanteId" class="form-control select2" style="width: 100%" asp-items="ViewBag.CargosPersonaRepresentante"></select>
                        <span asp-validation-for="CargoPersonaRepresentanteId" class="text-danger"></span>
                    </div>*@
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-4 mb-2">
                            <button type="submit" class="btn btn-success btn-block"><i class="fa fa-save"></i> Guardar</button>

                        </div>
                        <div class="col-12 col-md-4 mb-2">

                        </div>
                        <div class="col-12 col-md-4 mb-2">
                            <a class="btn btn-default btn-block" asp-action="Index"><i class="fa fa-arrow-left"></i> Volver a lista</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script type="text/javascript">
        $(function() {
            //Initialize Select2 Elements
            $('.select2').select2();
        });
    </script>

}